---
interface Props {
    data: {
        id: number;
        score: number;
        lines: string[];
    };
}

const { id, score, lines } = Astro.props.data;

function scoreClass(score: number): "positive" | "neutral" | "negative" {
    if (score > 0) {
        return "positive";
    } else if (score == 0) {
        return "neutral";
    } else {
        return "negative";
    }
}
---

<article>
    <header>
        <a href=`/quote/${id}`>#{id}</a>
        (<span class={scoreClass(score)}>{score}</span>)
    </header>

    {
        lines.map((line) => (
            <>
                <span class="line">{line}</span>
                <br />
            </>
        ))
    }
</article>

<style>
    article {
        font-family: var(--pico-font-family-monospace);
    }

    header {
        font-size: 1.25rem;
    }

    .positive {
        color: green;
    }

    .neutral {
        color: yellow;
    }

    .negative {
        color: red;
    }
</style>
